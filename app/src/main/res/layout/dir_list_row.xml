<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:clickable="true">
    <TableRow>
        <ImageView android:id="@+id/imageView"
                   android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_folder_black_24dp"/>

        <TextView android:id="@+id/textView"
                  android:layout_width="wrap_content"
                  android:layout_height="32dp"
                  android:text="Sample directory" android:layout_gravity="center_vertical"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" android:singleLine="true"
                  android:textStyle="bold"
                  android:nestedScrollingEnabled="true"
                  android:gravity="center_vertical"/>
    </TableRow>

</TableLayout>
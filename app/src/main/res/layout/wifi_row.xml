<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:id="@+id/wifiRowLayout"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginStart="10dp"
                                                   android:layout_weight="1"
                                                   android:gravity="fill_horizontal"
                                                   android:background="@drawable/list_color_selector"
                                                   >

    <ImageView
            android:id="@+id/wifiIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wifi_black_24dp"
            android:layout_gravity="center"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
        <TextView android:id="@+id/wifiNameTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textStyle="bold"
                  android:layout_gravity="bottom"
                  android:layout_marginStart="4dp"
                  android:text="Sample text"
        />
                  <!--android:textColor="@drawable/list_item_text_selector"-->

        <TextView android:id="@+id/wifiDescriptionTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:layout_marginStart="4dp"
                  android:layout_gravity="bottom"
                  android:text="Sample description"
                  android:textSize="8sp"
        />
                  <!--android:textColor="@drawable/list_item_text_selector"-->
    </LinearLayout>

</LinearLayout>
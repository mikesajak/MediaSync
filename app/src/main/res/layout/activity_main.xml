<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="org.mikesajak.mediasync.app.MainActivity">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_gravity="center_horizontal"
                  android:layout_marginTop="50dp">
        <TextView
                android:text="Service status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/textView1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STOPPED"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run NOW"
            android:id="@+id/startButton" android:layout_gravity="center_horizontal" android:layout_marginTop="40dp"/>

</LinearLayout>
